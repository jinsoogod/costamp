<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanium.costamp.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="이메일"
        android:textSize="25sp"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/et_LoginEnterEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="90dp"
        android:maxLength="20"
        android:singleLine="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"

        android:layout_marginTop="150dp"
        android:text="비밀번호"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_LoginEnterPW"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="140dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:onClick="onClick"
        android:id="@+id/btn_login"
        android:layout_below="@+id/et_LoginEnterPW"
        android:layout_centerHorizontal="true" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_FacebookLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_KakaoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_EmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 시작하기"
        android:onClick="onClick"
        android:layout_below="@+id/btn_KakaoLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_NoLoginStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="로그인없이 계속하기"
        android:layout_below="@+id/btn_EmailLogin"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>