<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.hanium.costamp.LoginActivity">

    <!-- 페이스북 로그인 버튼 -->
    <!-- 커스터마이징을 위해서 FrameLayout으로 겹쳐서 둠 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 진짜 페이스북 로그인 API가 담긴 버튼 -->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_FBLoginOri"
            android:layout_width="198.67dp"
            android:layout_height="24.33dp"
            android:visibility="gone"
            android:layout_marginLeft="69.33dp"
            android:layout_marginTop="316.25dp" />

        <!-- 커스터마이징한 이미지형태 버튼 -->

        <Button
            android:id="@+id/btn_FBLoginCustom"
            android:layout_width="198.67dp"
            android:layout_height="24.33dp"
            android:background="@drawable/btn_login_facebook"
            android:onClick="onClick"
            android:layout_marginLeft="69.33dp"
            android:layout_marginTop="316.25dp" />

    </FrameLayout>

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_KakaoLogin"
        android:layout_width="198.67dp"
        android:layout_height="24.33dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_EmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 시작하기"
        android:onClick="onClick"
        android:layout_below="@+id/btn_KakaoLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_NoLoginStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="로그인없이 계속하기"
        android:layout_below="@+id/btn_EmailLogin"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>